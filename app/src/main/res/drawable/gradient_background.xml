<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:angle="270"
                android:startColor="#3D4750"
                android:endColor="#1B252E"
                android:type="linear" />
        </shape>
    </item>
    <item android:state_focused="true" >
        <shape>
            <gradient
                android:angle="270"
                android:startColor="#3D4750"
                android:endColor="#1B252E"
                android:type="linear" />
        </shape>
    </item>
    <item >
        <shape>
            <gradient
                android:angle="90"
                android:startColor="#3D4750"
                android:endColor="#1B252E"
                android:type="linear" />
        </shape>
    </item>
</selector>